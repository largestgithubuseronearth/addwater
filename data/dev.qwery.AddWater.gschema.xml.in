<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="addwater">
	<!-- Add Water -->
	<!-- The slash at the end of the prefix is important! -->
	<schema id="@APP_ID@" path="@PREFIX@/">
		<key name="window-height" type="i">
			<default>700</default>
		</key>
		<key name="window-width" type="i">
			<default>500</default>
		</key>
		<key name="window-maximized" type="b">
			<default>false</default>
		</key>

		<key name="background-update" type="b">
			<default>false</default>
		</key>
	</schema>


	<!-- Firefox -->
	<schema id="@APP_ID@.Firefox" path="@PREFIX@/Firefox/">
		<key name="data-path" type="s">
			<default>""</default>
		</key>
		<key name="autofind-paths" type="b">
			<default>true</default>
			<summary>Automatically Discover the installed Firefox package format</summary>
		</key>

		<key name="installed-version" type="i">
			<default>0</default>
			<summary>Most recently installed version of the firefox gnome theme</summary>
		</key>

		<!-- General -->
		<key name="theme-enabled" type="b">
			<default>false</default>
		</key>
		<key name="profile-selected" type="s">
			<default>""</default>
		</key>

		<!-- Tab Positioning -->
		<key name="hide-single-tab" type="b">
			<default>false</default>
		</key>
		<key name="normal-width-tabs" type="b">
			<default>false</default>
		</key>
		<key name="tab-align-left" type="b">
			<default>false</default>
		</key>
		<key name="swap-tab-close" type="b">
			<default>false</default>
		</key>
		<key name="bookmarks-toolbar-under-tabs" type="b">
			<default>false</default>
		</key>
		<key name="tabs-as-headerbar" type="b">
			<default>false</default>
		</key>

		<!-- Tab Behavior -->
		<key name="all-tabs-button" type="b">
			<default>false</default>
		</key>
		<key name="active-tab-contrast" type="b">
			 <default>false</default>
		</key>
		<key name="close-only-selected-tabs" type="b">
			<default>false</default>
		</key>
		<key name="symbolic-tab-icons" type="b">
			<default>false</default>
		</key>

		<!-- Styling -->
		<key name="hide-webrtc-indicator" type="b">
			<default>false</default>
		</key>
		<key name="no-themed-icons" type="b">
			<default>false</default>
		</key>
		<key name="oled-black" type="b">
			<default>false</default>
		</key>
	</schema>

	<!-- Thunderbird (finish when ready to support)-->
	<schema id="@APP_ID@.Thunderbird" path="@PREFIX@/Thunderbird/">
		<key name="data-path" type="s">
			<default>""</default>
		</key>
		<key name="autofind-paths" type="b">
			<default>true</default>
		</key>
	</schema>
</schemalist>

