<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
	<id>@APP_ID@</id>
	<launchable type="desktop-id">@APP_ID@.desktop</launchable>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>GPL-3.0-or-later</project_license>


	<!-- Branding Info -->
	<name>Add Water</name>
	<summary>Browse fashionably</summary>
	<description>
	  <p>Add Water automatically installs and updates the GNOME theme for Firefox. Conveniently customize the many style options available, and let Add Water update the app for you in the background.</p>
		<p>Supports Flatpak, Snap, Librewolf, and Floorp</p>
		<p>The GNOME for Firefox theme is developed and maintained by Rafael Mardojai CM</p>
		<p>This project is not affiliated or endorsed by the Mozilla Foundation. Firefox is a trademark of the Mozilla Foundation in the U.S. and other countries.</p>
	</description>

	<branding>
	  <color type="primary" scheme_preference="light">#3584e4</color>
	  <color type="primary" scheme_preference="dark">#1a8a74</color>
	</branding>

	<screenshots>
		<screenshot type="default">
			<caption>Add Water and Firefox Preview (light mode)</caption>
